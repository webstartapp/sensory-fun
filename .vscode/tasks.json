{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run ESLint on whole project",
            "type": "shell",
            "command": "npm run lint",
            "problemMatcher": "$eslint-stylish",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/d", "/c"]
                }
            }
        },
        {
            "label": "eslint check linux",
            "type": "shell",
            "command": "./node_modules/.bin/eslint",
            "args": [
                "**/*.{js,jsx,ts,tsx}",
                "--ext",
                ".js,.jsx,.ts,.tsx",
                "./"
            ],
            "problemMatcher": "$eslint-stylish",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}
